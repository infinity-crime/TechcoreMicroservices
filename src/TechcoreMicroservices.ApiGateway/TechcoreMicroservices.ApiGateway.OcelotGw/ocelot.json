{
  "Routes": [
    {
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "UpstreamPathTemplate": "/orders/{everything}",
      "DownstreamPathTemplate": "/api/orders/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-order-service",
          "Port": 8081
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "Get", "Post", "Delete" ],
      "UpstreamPathTemplate": "/reviews/{everything}",
      "DownstreamPathTemplate": "/api/reviews/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-review-service",
          "Port": 8081
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UpstreamPathTemplate": "/authors/{everything}",
      "DownstreamPathTemplate": "/api/authors/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-service-authors",
          "Port": 8081
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ],
      "UpstreamPathTemplate": "/books/{everything}",
      "DownstreamPathTemplate": "/api/books/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-service-books",
          "Port": 8081
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "UpstreamHttpMethod": [ "Delete" ],
      "UpstreamPathTemplate": "/books/delete/{bookId}",
      "DownstreamPathTemplate": "/api/books/delete/{bookId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-service-books",
          "Port": 8081
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "role": "Admin"
      }
    },
    {
      "UpstreamHttpMethod": [ "Post" ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-service-books",
          "Port": 8081
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "Post" ],
      "UpstreamPathTemplate": "/admin/assign-role",
      "DownstreamPathTemplate": "/api/admin/assign-role",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-service-books",
          "Port": 8081
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamPathTemplate": "/books/{id}",
      "DownstreamPathTemplate": "/api/books/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-service-books",
          "Port": 8081
        }
      ],
      "Key": "Books",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamPathTemplate": "/reviews/book/{id}",
      "DownstreamPathTemplate": "/api/reviews/book/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "book-review-service",
          "Port": 8081
        }
      ],
      "Key": "Reviews"
    }
  ],
  "Aggregates": [
    {
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamPathTemplate": "/details/{id}",
      "RouteKeys": [ "Books", "Reviews" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}